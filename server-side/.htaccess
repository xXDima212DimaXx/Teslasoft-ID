Options +FollowSymLinks
RewriteEngine On
RewriteCond %{QUERY_STRING} (\<|%3C).*script.*(\>|%3E) [NC,OR]
RewriteCond %{QUERY_STRING} GLOBALS(=|\[|\%[0-9A-Z]{0,2}) [OR]
RewriteCond %{QUERY_STRING} _REQUEST(=|\[|\%[0-9A-Z]{0,2})
RewriteRule ^(.*)$ 403.php [F,L]
RewriteEngine on
RewriteCond %{HTTP_REFERER} !^http://teslasoft.org/.*$ [NC]
RewriteCond %{HTTP_REFERER} !^http://www.teslasoft.org/.*$ [NC]
RewriteRule .(mp3|mp4|vaw|webm|dat|csv|flv|mov|mp2|sjson|dtx|tf)$ - [F]
RewriteRule ^(([^/]+/)*[^.]+)$ /$1.php [L]
RewriteEngine On
RewriteCond %{SERVER_PORT} 80
RewriteRule ^(.*)$ https://id.teslasoft.org/$1 [R,L]
ErrorDocument 404 /404.php
ErrorDocument 403 /403.php
ErrorDocument 401 /401.php
