<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@style/Theme.AppCompat">
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowBackground">@color/wdarkbg</item>
		<item name="android:windowNoTitle">true</item>
		<item name="colorAccent">#2e8b57</item>
		<item name="colorPrimaryDark">#121212</item>
		<item name="colorPrimary">#121212</item>
		<item name="android:statusBarColor">#99000000</item>
		<item name="android:windowDrawsSystemBarBackgrounds">true</item>
		<item name="android:windowAnimationStyle">@style/Theme.Anim.Fade</item>
		<item name="android:windowContentTransitions">true</item>
	</style>
	<style name="Theme.Anim.Fade" parent="@style/Theme.AppCompat">
		<item name="android:windowEnterAnimation">@anim/fade_in</item>
		<item name="android:windowExitAnimation">@anim/fade_out</item>
	</style>
</resources>
